<?xml version="1.0" encoding="utf-8"?>
<com.moran.base.view.CustomLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:hideTitleLayout="true"
        tools:context=".common.activity.StartActivity">





    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageView
                android:id="@+id/iv_start_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

        <TextView
                android:id="@+id/tv_leapfrog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/leapfrog"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:background="@drawable/start_tv_leapfrog_shape"/>






    </FrameLayout>






</com.moran.base.view.CustomLinearLayout>